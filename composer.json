{
    "name": "tarikmanoar/spell-money",
    "description": "Convert numeric values into word representations in multiple languages (English, Bengali, Hindi, Urdu) using South Asian (lakh-crore) or International number systems.",
    "keywords": [
        "tarikmanoar",
        "number to word",
        "lakh crore",
        "spell-money",
        "taka paisa",
        "number to indian english",
        "number to taka",
        "number to words",
        "spell money",
        "number bangladeshi words",
        "convert number to word",
        "laravel",
        "multi-language",
        "bengali",
        "hindi",
        "urdu",
        "currency conversion"
    ],
    "homepage": "https://github.com/tarikmanoar/spell-money",
    "license": "MIT",
    "authors": [
        {
            "name": "Tarik Manoar",
            "email": "tarikmanoar@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2|^11.0",
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Manoar\\SpellMoney\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Manoar\\SpellMoney\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {}
    },
    "extra": {
        "laravel": {
            "providers": [
                "Manoar\\SpellMoney\\Providers\\SpellMoneyServiceProvider"
            ],
            "aliases": {
                "SpellMoney": "Manoar\\SpellMoney\\Facades\\SpellMoney"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
